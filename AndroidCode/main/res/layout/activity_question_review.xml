<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.work.QuestionReviewActivity"
    android:weightSum="1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#222222">
        <ImageView
            android:id="@+id/Inquestionreview_backbtn"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp"/>
        <TextView
            android:layout_toRightOf="@+id/Inquestionreview_backbtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|start"
            android:text="返回"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/Inquestionreview_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:text="题目"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="vertical">
        <TextView
            android:id="@+id/Inquestionreview_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="题干"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:background="#FFFFFF"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:background="#FFFFFF">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.23"
                android:layout_height="match_parent"
                android:text="正确答案:"
                android:textColor="#000000"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/Inquestionreview_corroct_ans"
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="match_parent"
                android:text="ABC"
                android:textColor="#000000"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.23"
                android:layout_height="match_parent"
                android:text="你的答案:"
                android:textColor="#000000"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/Inquestionreview_user_ans"
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="match_parent"
                android:text="ABC"
                android:textColor="#000000"
                android:textSize="18sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/Inquestionreview_op1"
                android:text="选项A"
                android:textSize="15sp"
                android:padding="10sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"
                android:background="#FFFFFF"
                />

            <TextView
                android:id="@+id/Inquestionreview_op2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:text="选项B"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                android:background="#FFFFFF"/>

            <TextView
                android:id="@+id/Inquestionreview_op3"
                android:text="选项C"
                android:textSize="15sp"
                android:padding="10sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"
                android:background="#FFFFFF"
                />
            <TextView
                android:id="@+id/Inquestionreview_op4"
                android:text="选项D"
                android:textSize="15sp"
                android:padding="10sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"
                android:background="#FFFFFF"
                />
            <TextView
                android:id="@+id/Inquestionreview_op5"
                android:text="选项E"
                android:textSize="15sp"
                android:padding="10sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"
                android:background="#FFFFFF"
                />
            <TextView
                android:id="@+id/Inquestionreview_op6"
                android:text="选项F"
                android:textSize="15sp"
                android:padding="10sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"
                android:background="#FFFFFF"
                />
            <TextView
                android:id="@+id/Inquestionreview_op7"
                android:text="选项G"
                android:textSize="15sp"
                android:padding="10sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"
                android:background="#FFFFFF"
                />
            <TextView
                android:id="@+id/Inquestionreview_op8"
                android:text="选项H"
                android:textSize="15sp"
                android:padding="10sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"
                android:background="#FFFFFF"
                />
            <TextView
                android:id="@+id/Inquestionreview_op9"
                android:text="选项I"
                android:textSize="15sp"
                android:padding="10sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"
                android:background="#FFFFFF"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <EditText
                android:id="@+id/Inquestionreview_Comment_et"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="100dp"
                android:minLines="3"
                android:scrollbars="vertical"
                android:hint="请输入你的精彩评论"
                android:textSize="18dp"
                android:padding="10dp"
                android:background="#FFFFFF"
                />
            <Button
                android:id="@+id/Inquestionreview_add_coment_btn"
                android:layout_width="0dp"
                android:layout_weight="0.23"
                android:layout_height="wrap_content"
                android:text="发表评论"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <com.example.work.item.WrapContentListview
            android:id="@+id/Inquestionreview_comentlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#FFFFFF"
            android:dividerHeight="5dp"></com.example.work.item.WrapContentListview>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
