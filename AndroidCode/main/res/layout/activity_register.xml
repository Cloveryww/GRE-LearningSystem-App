<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login"
    tools:context="com.example.work.LoginActivity">

    <LinearLayout
        android:id="@+id/MyRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_centerVertical="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/R_user_im"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#80000000"
                android:src="@mipmap/user_icon" />
            <EditText
                android:id="@+id/R_user"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:ems="10"
                android:hint="Please input your User name"
                android:background="#80000000"
                android:textColorHint="#ffffff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/R_password_im1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#80000000"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/password_icon"/>

            <EditText
                android:id="@+id/R_password_input1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:ems="10"
                android:hint="Please input your Password"
                android:inputType="textPassword"
                android:background="#80000000"
                android:textColorHint="#ffffff" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/R_password_im2"
                android:layout_width="wrap_content"
                android:background="#80000000"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/password_icon"/>

            <EditText
                android:id="@+id/R_password_input2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:ems="10"
                android:hint="Input your Password again"
                android:inputType="textPassword"
                android:background="#80000000"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff" />
        </LinearLayout>
        <Button
            android:id="@+id/R_submitbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:backgroundTint="#AA1E90FF"
            android:text="Submit"/>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/R_register_pb"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:max="100"
        android:progress="0"
        android:visibility="invisible"
        android:layout_below="@+id/MyRegister" />
</RelativeLayout>
